<!-- logback-spring.xml -->

<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/usr/AP/sinopac/logs/info.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sinopac" level="info" />

    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>
